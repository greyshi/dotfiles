# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"
alias scd="cd"

# Shortcuts
alias dl="cd ~/Downloads"
alias dc="cd ~/Documents"
alias dt="cd ~/Desktop"
alias p="cd ~/Dropbox/Projects"
alias c="clear"
alias h="history"
alias v="vim"
alias vi="vim"
alias vf='vim $(fzf)'
alias o="open"
alias oo="open ."

# Git shortcuts that use git aliases
alias g="git"
alias gam="git add -A && git commit -av --amend"
alias am="gam"
alias gd="git d"
alias gds="git ds"
alias gdc="git ds"
alias gs="git s"
alias gsh="git sh"
alias gca="git ca"
alias gl="git l"
alias ga="git add -A"
alias gp="git pull --rebase"
alias gpush="git push"
alias gr="git reset"
alias grh="git reset --hard"
alias gcb="git checkout -b"
alias grb="git rebase"
alias grbi="git rebase -i"
alias gst="git stash"
alias gstp="git stash pop"

alias grep="rg"

alias bat="bat --theme Dracula"

# Replace cat with bat
alias cat="bat --paging=never -p"

# Preview fzf files
alias fbat="fzf --preview 'bat --color=always --theme Dracula --style=numbers --line-range=:500 {}'"

lsflag="--color --group-directories-first"

# List all files colorized in long format
alias l="ls ${lsflag}"
alias ll="ls -lh ${lsflag}"
alias ls="ls ${colorflag}"

# Accept typo for ls
alias sl="ls"

# List all files colorized in long format, including dot files
alias la="ls -la ${lsflag}"

# List only directories
alias lsd='ls -l ${lsflag} | grep "^d"'

# macOS specific configuration
if [[ $OSTYPE == 'darwin'* ]]; then
    # Use gnu linux
    alias ls="gls"
    # Always use color output for `ls`
    alias ls="command gls ${lsflag}"
else
    alias ls="command ls ${lsflag}"
fi

export LS_COLORS='no=00:fi=00:di=01;34:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '

# Gzip-enabled `curl`
alias gurl='curl --compressed'

# Get OS X Software Updates, and update installed Ruby gems, Homebrew, npm, and their installed packages
alias update='sudo softwareupdate -i -a; brew update; brew upgrade; brew cleanup; npm update npm -g; npm update -g; sudo gem update'

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en1"
alias ips="ifconfig -a | grep -o 'inet6\? \(\([0-9]\+\.[0-9]\+\.[0-9]\+\.[0-9]\+\)\|[a-fA-F0-9:]\+\)' | sed -e 's/inet6* //'"

# Enhanced WHOIS lookups
alias whois="whois -h whois-servers.net"

# Show/hide hidden files in Finder
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"
